DROP TABLE IF EXISTS db.table/vw_name;
CREATE TABLE IF NOT EXISTS db.table/vw_name (
	id 					STRING 		COMMENT 'person id',
	name				STRING 		COMMENT 'person name'

)
STORED AS PARQUET
LOCATION 'hdfs://nameservice1/db.table_name
TBLPROPERTIES (
	'COMMENT'='TABLE DESCRIPTION', 
	'CDP_MANAGED'='TRUE', 
	'LOAD_FREQUENCY'='DAILY', 
	'SECURITY_CLASSIFICATION'='CONFIDENTIAL LIMITED', 
	'SOURCE' = 'Navex',
	'PARQUET.COMPRESS'='SNAPPY',
	'CONTACT_INFO' = '-EMAIL@COMPANY',
	'OWNER' = 'NAMES',
	'BUSINESS_OWNER' = 'USER NAME');
	
